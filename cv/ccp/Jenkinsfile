pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Running ${params.CV_BRANCH} ${JENKINS_URL} ${params.CV_ENVIRONMENT} ${params.CV_PROJECT} ${params.CV_VERSION}"
                sh '''
                    echo "Project parameters"
                    echo "CV_BRANCH=${params.CV_BRANCH}"
                    echo "CV_URL=${params.CV_URL}"
                    echo "CV_COMMIT=${params.CV_COMMIT}"
                    echo "CV_PROJECT=${params.CV_PROJECT}"
                    echo "CV_ENVIRONMENT=${params.CV_ENVIRONMENT}"
                    echo "CV_VERSION=${params.CV_VERSION}"
                    echo "CV_CREDENTIALS_ID=${params.CV_CREDENTIALS_ID}"
                '''
                sh 'ls -l'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
