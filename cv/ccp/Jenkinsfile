pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo "Running ${BUILD_ID} on ${JENKINS_URL} ${params.CODE_BRANCH} ${params.CODE_VERSION} ${params.CODE_STRING}"
                sh '''
                    echo "Project parameters"
                    echo "CV_BRANCH=$CV_BRANCH"
                    echo "CV_URL=$CV_URL"
                    echo "CV_COMMIT=$CV_COMMIT"
                    echo "CV_PROJECT=$CV_PROJECT"
                    echo "CV_ENVIRONMENT=$CV_ENVIRONMENT"
                    echo "CV_VERSION=$CV_VERSION"
                    echo "CV_CREDENTIALS_ID=$CV_CREDENTIALS_ID"
                '''
                sh 'ls -l'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
